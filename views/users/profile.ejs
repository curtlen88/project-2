<%- include('../partials/header', { user }) %>

<!-- Page header -->
<h3 class="text-center bg-dark text-light p-3">Update your Password</h3>

<!-- Update password form and button -->
<form class="text-center" action="/users/<%=user.id%>/?_method=PUT" method="POST">
    <label for="email">Email:</label>
    <input type="email" name="email" id="email" required />
<br>
    <label class="m-2" for="password">New Password:</label>
    <input type="password" name="password" id="password" required/>
<br>
    <button class="btn btn-warning m-2" type="submit">Update Password</button>
</form>

<%- include('../partials/footer') %>